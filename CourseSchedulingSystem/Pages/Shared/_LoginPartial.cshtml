@using CourseSchedulingSystem.Data.Models

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="navbar-text mr-2">
                WELCOME, @User.Identity.Name.ToUpper()!
            </span>
        </li>
        <li class="nav-item">
            <a class="navbar-text text-light" asp-area="AzureAD" asp-controller="Account" asp-action="SignOut">LOG OUT</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="navbar-text text-light" asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">LOG IN</a>
        </li>
    }
</ul>