@using CourseSchedulingSystem.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="navbar-text">
                WELCOME, <a class="text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name.ToUpper()</a>!
            </span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new {area = ""})" method="post">
                <button type="submit" class="navbar-text btn btn-link text-light">LOG OUT</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="navbar-text text-light" asp-area="Identity" asp-page="/Account/Login">LOG IN</a>
        </li>
    }
</ul>