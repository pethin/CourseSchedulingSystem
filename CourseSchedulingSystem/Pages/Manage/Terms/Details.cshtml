@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.Terms.DetailsModel

@{
    ViewData["Title"] = $"{Model.Term.Name} Details";
}

<h1>Details</h1>

<div>
    <h4>Term</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Term.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Term.Name)
        </dd>
    </dl>
    <hr />
    <h4 class="mb-0">Parts of Term</h4>
    <small>Course Sections are scheduled to a Part of Term.</small>
    <div class="mb-2"></div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Term.TermParts[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Term.TermParts[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Term.TermParts[0].EndDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Term.TermParts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-page="./TermParts/Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>