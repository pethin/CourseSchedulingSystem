@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.Instructors.DetailsModel

@{
    ViewData["Title"] = $"{Model.Instructor.FullName} Details";
}

<h1>Details</h1>

<div>
    <h4>Instructor</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.Middle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.Middle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.IsActive)
        </dd>
        <dt class="col-sm-12">
            Courses
        </dt>
        <dd class="col-sm-12">
            <ul>
                @foreach (var course in Model.Courses)
                {
                    <li><a asp-page="../Courses/Details" asp-route-id="@course.Id">@course.Identifier</a></li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>