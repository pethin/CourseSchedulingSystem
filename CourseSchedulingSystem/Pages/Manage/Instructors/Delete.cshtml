@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.Instructors.DeleteModel

@{
    ViewData["Title"] = "Delete Instructor";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Instructor</h4>
    <hr/>
    @if (Model.InUse)
    {
        <div class="alert alert-primary">
            This instructor can not be deleted. It is currently in use by the listed courses.
        </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.Middle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.Middle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.IsActive)
        </dd>
        <dt class="col-sm-12">
            Courses
        </dt>
        <dd class="col-sm-12">
            <ul>
                @foreach (var course in Model.Courses)
                {
                    <li><a asp-page="../Courses/Details" asp-route-id="@course.Id">@course.Identifier</a></li>
                }
            </ul>
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" disabled="@(Model.InUse ? "" : null)"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>