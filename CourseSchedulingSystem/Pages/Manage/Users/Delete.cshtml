@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.Users.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr/>
    <table class="table">
        <tbody>
            <tr>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.User.UserName)
                </th>
                <td>
                    @Html.DisplayFor(model => model.User.UserName)
                </td>
            </tr>
            <tr>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.User.IsLockedOut)
                </th>
                <td>
                    @Html.DisplayFor(model => model.User.IsLockedOut)
                </td>
            </tr>
            <tr>
                <th scope="row">
                    Departments
                </th>
                <td>
                    @foreach (var du in Model.User.DepartmentUsers)
                    {
                        @du.Department.Name
                        <br />
                    }
                </td>
            </tr>
        </tbody>
    </table>

    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
