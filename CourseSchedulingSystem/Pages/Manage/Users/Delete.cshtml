@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.Users.DeleteModel

@{
    ViewData["Title"] = $"Delete {Model.UserModel.UserName}";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    @if (!Model.CanDelete)
    {
        <div class="alert alert-primary">
            This user can not be deleted. There must be at least one user that is not locked out.
        </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.IsLockedOut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.IsLockedOut)
        </dd>
        <dt class="col-sm-12">Departments</dt>
        <dd class="col-sm-12">
            <ul>
                @foreach (var du in Model.UserModel.DepartmentUsers)
                {
                    <li><a asp-page="../Departments/Details" asp-route-id="@du.DepartmentId">@du.Department.Name</a></li>
                }
            </ul>
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="UserModel.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" disabled="@(Model.CanDelete ? null : "")"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
