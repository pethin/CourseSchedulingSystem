@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.CourseAttributes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Course Attribute</h4>
    <hr />
    @if (Model.CourseAttribute.CourseCourseAttributes.Any())
    {
        <div class="alert alert-primary">
            This attribute can not be deleted. It is currently in use by the listed courses.
        </div>
    }
    <dl class="row">
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.CourseAttribute.Name)
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.CourseAttribute.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-12">Courses</dt>
        <dd class="col-sm-12">
            <ul>
                @foreach (var courseAttribute in @Model.CourseAttribute.CourseCourseAttributes)
                {
                    <li>@courseAttribute.Course.Identifier</li>
                }
            </ul>
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="CourseAttribute.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" disabled="@Model.CourseAttribute.CourseCourseAttributes.Any()" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>