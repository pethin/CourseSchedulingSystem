@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.Buildings.DetailsModel

@{
    ViewData["Title"] = $"{Model.Building.Name} Details";
}

<h1>Details</h1>

<div>
    <h4>Building</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.IsEnabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.IsEnabled)
        </dd>
        <dt class="col-sm-12">Rooms</dt>
        <dd class="col-sm-12">
            <ul>
                @foreach (var room in Model.Building.Rooms.OrderBy(r => r.Number))
                {
                    <li><a asp-page="../Rooms/Detail" asp-route-id="@room.Id">@room.Number</a></li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Building.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
