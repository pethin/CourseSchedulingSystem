@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.Buildings.DetailsModel

@{
    ViewData["Title"] = $"{Model.Building.Name} Details";
}

<h1>Details</h1>

<div>
    <h4>Building</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.IsEnabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.IsEnabled)
        </dd>
    </dl>
    <hr/>
    <h4>Rooms</h4>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Building.Rooms[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building.Rooms[0].Capacity)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Building.Rooms)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    <a asp-page="./Rooms/Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
