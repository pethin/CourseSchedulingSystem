@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.Buildings.DeleteModel

@{
    ViewData["Title"] = "Delete Building";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Building</h4>
    <hr />
    @if (Model.InUse)
    {
        <div class="alert alert-primary">
            This building can not be deleted. It is in use by some course sections.
        </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.IsEnabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.IsEnabled)
        </dd>
    </dl>
    <hr/>
    <h4>Rooms</h4>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Building.Rooms[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building.Rooms[0].Capacity)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Building.Rooms)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" disabled="@(Model.InUse ? "" : null)"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
