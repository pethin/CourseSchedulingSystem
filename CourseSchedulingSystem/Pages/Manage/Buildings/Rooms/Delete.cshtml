@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.Buildings.Rooms.DeleteModel

@{
    ViewData["Title"] = $"Delete {Model.Room.Identifier}";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Room</h4>
    <hr />
    @if (Model.InUse)
    {
        <div class="alert alert-primary">
            This room can not be deleted. It is in use by some course sections.
        </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Building)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Building.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.IsEnabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.IsEnabled)
        </dd>
    </dl>
    
    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" disabled="@(Model.InUse ? "" : null)"/> |
        <a asp-page="../Edit" asp-route-id="@Model.Room.BuildingId">Back to Building</a>
    </form>
</div>
