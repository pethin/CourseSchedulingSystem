@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.Buildings.Rooms.DetailsModel

@{
    ViewData["Title"] = $"{Model.Room.Identifier} Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Room.Building.Name - Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Building)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Building.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.IsEnabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.IsEnabled)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Room.Id">Edit</a> |
    <a href="@Model.ReturnUrl">Back to Building</a>
</div>
