@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.CourseSections.ScheduledMeetingTimes.DeleteModel

@{
    var course = Model.ScheduledMeetingTime.CourseSection.Course.Identifier;
    var courseSection = Html.DisplayFor(model => model.ScheduledMeetingTime.CourseSection.Section);
    var sectionNumber = Model.ScheduledMeetingTime.CourseSection.Section.ToString("D3");

    ViewData["Title"] = $"Delete {course} {sectionNumber}";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@course @courseSection - Scheduled Meeting Time</h4>
    <hr />
    @await Html.PartialAsync("_SchedulingNotifications", Model.ScheduledMeetingTime.SchedulingNotifications)
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledMeetingTime.MeetingTypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledMeetingTime.MeetingType.Code) -
            @Html.DisplayFor(model => model.ScheduledMeetingTime.MeetingType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledMeetingTime.StartTimeText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledMeetingTime.StartTimeText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledMeetingTime.EndTimeText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledMeetingTime.EndTimeText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledMeetingTime.Monday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledMeetingTime.Monday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledMeetingTime.Tuesday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledMeetingTime.Tuesday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledMeetingTime.Wednesday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledMeetingTime.Wednesday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledMeetingTime.Thursday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledMeetingTime.Thursday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledMeetingTime.Friday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledMeetingTime.Friday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledMeetingTime.Saturday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledMeetingTime.Saturday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledMeetingTime.Sunday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledMeetingTime.Sunday)
        </dd>
        <dt class="col-sm-12">
            Instructors
        </dt>
        <dd class="col-sm-12">
            <ul>
                @foreach (var item in Model.ScheduledMeetingTime.ScheduledMeetingTimeInstructors)
                {
                    <li><a asp-page="../../Instructors/Details" asp-route-id="@item.InstructorId">@item.Instructor.FullName</a></li>                    
                }
            </ul>
        </dd>
        <dt class="col-sm-12">
            Locations
        </dt>
        <dd class="col-sm-12">
            <ul>
                @foreach (var item in Model.ScheduledMeetingTime.ScheduledMeetingTimeRooms)
                {
                    <li><a asp-page="../../Buildings/Rooms/Details" asp-route-id="@item.RoomId">@item.Room.Identifier</a></li>                    
                }
            </ul>
        </dd>
    </dl>
    
    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="../Edit" asp-route-id="@Model.ScheduledMeetingTime.CourseSectionId">Back to Course Section</a>
    </form>
</div>
