@page "{id:Guid}"
@model CourseSchedulingSystem.Pages.Manage.InstructionalMethods.DeleteModel

@{
    ViewData["Title"] = "Delete Instructional Method";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Instructional Method</h4>
    <hr/>
    @if (Model.InUse)
    {
        <div class="alert alert-primary">
            This instructional method can not be deleted. It is currently in use by the listed courses.
        </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstructionalMethod.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstructionalMethod.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstructionalMethod.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstructionalMethod.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstructionalMethod.IsRoomRequired)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstructionalMethod.IsRoomRequired)
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" disabled="@(Model.InUse ? "" : null)"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>