@page
@model CourseSchedulingSystem.Pages.Manage.InstructionalMethods.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Instructional Methods</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InstructionalMethod[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstructionalMethod[0].IsRoomRequired)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.InstructionalMethod) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRoomRequired)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
